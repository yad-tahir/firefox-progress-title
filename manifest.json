{
  "manifest_version": 2,
  "name": "Enable Progress-aware Titles",
  "version": "0.1",
  "description": "Add load progress to tab titles.",
  "homepage_url": "https://github.com/yad-tahir/firefox-progress-title",

  "applications": {
      "gecko": {
          "id": "firefox-progress-title@yad-tahir.github.com",
          "strict_min_version": "48.0"
      }
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/progress-in-title.js"],
      "run_at": "document_start"
    }
  ],


  "permissions": ["storage"]
}
